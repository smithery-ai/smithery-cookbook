{
	"name": "smithery-typescript-custom",
	"version": "1.0.0",
	"description": "Custom TypeScript MCP server with Express HTTP transport",
	"main": "index.js",
	"module": "./src/index.ts",
	"type": "module",
	"scripts": {
		"dev": "npx tsx src/index.ts",
		"build": "npx tsc",
		"start": "npm run start:http",
		"start:http": "TRANSPORT=http node dist/index.js",
		"start:stdio": "TRANSPORT=stdio node dist/index.js",
		"prepare": "npm run build",
		"prepublishOnly": "npm run build"
	},
	"keywords": ["mcp", "express", "typescript", "smithery"],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.1",
		"express": "^4.18.2",
		"cors": "^2.8.5",
		"zod": "^3.25.46"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/cors": "^2.8.17",
		"@types/node": "^20.10.0",
		"tsx": "^4.19.4",
		"typescript": "^5.3.3"
	}
}
